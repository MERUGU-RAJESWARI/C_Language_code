{
  "name": "Java Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["redhat.java", "vscjava.vscode-java-pack"]
    }
  },
  "postCreateCommand": "mvn clean install",
  "remoteUser": "vscode"
}
